<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="75dp"
    android:gravity="center_horizontal"
    android:background="@color/quantum_amber300"
    tools:context=".SOS">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Saved:" />
    <TextView
        android:id="@+id/tv_msgRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="" />

    <EditText
        android:id="@+id/et_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Receiver's Phone Number"
        android:inputType="phone"
        android:maxLength="15"
        android:padding="12dp" />

    <Button
        android:id="@+id/et_changeRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/quantum_black_100"
        android:text="change receiver number" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current SOS Message:" />
    <TextView
        android:id="@+id/tv_msgInp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top"
        android:hint="Enter Message"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:padding="12dp" />

    <Button
        android:id="@+id/et_changeSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/quantum_black_100"
        android:text="change SOS Message" />

    <Button
        android:id="@+id/et_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/quantum_black_100"
        android:text="Test SEND" />

    <Button
        android:id="@+id/et_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/quantum_black_100"
        android:text="Return to homescreen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:text="SOS Settings"
        android:textColor="@color/quantum_black_100"
        android:textSize="40sp"
        android:textStyle="bold" />


</LinearLayout>

