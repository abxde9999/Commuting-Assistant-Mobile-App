<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Profile">


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_corner">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounder_corner3">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="112dp"
                android:layout_height="97dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilePic"

                android:layout_marginStart="130dp"
                android:layout_marginTop="-76dp"
                android:fontFamily="@font/secular_one"
                android:hint="Full Name"
                android:textColor="@color/black"
                android:textSize="20dp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="129dp"
                android:layout_marginTop="70dp">

                <ImageView
                    android:id="@+id/ic_email"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_email" />

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ic_email"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="E-mail"
                    android:textColorHint="@color/green"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ic_mobile"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@id/ic_email"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/profilePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_email"
                    android:layout_alignStart="@id/ic_mobile"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Mobile"
                    android:textColorHint="@color/green"
                    android:textSize="13sp" />


            </RelativeLayout>

        </RelativeLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="146dp"
            android:layout_marginBottom="27dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_refresh"
            app:maxImageSize="35dp" />

        <Button
            android:id="@+id/et_settings"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="125dp"
            android:layout_marginTop="450dp"
            android:layout_gravity="center_horizontal"
            android:text="SOS Settings" />

        <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="182dp"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/rounder_corner3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="26dp">

                <ImageView
                    android:id="@+id/city"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/city" />

                <TextView
                    android:id="@+id/currCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/city"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Current City"
                    android:textColor="@color/blue"
                    android:textSize="10dp" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="189dp"
            android:background="@drawable/rounder_corner3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="26dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/loc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_loc" />

                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/loc"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="Country"
                        android:textColor="@color/blue"
                        android:textSize="10dp" />

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="266dp"
            android:background="@drawable/rounder_corner3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="26dp">

                <TextView
                    android:id="@+id/currStreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Current Street/Address"
                    android:textColor="@color/blue"
                    android:textSize="10dp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:src="@drawable/a" />

        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/ic_logout" />




</RelativeLayout>
